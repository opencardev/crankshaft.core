[Unit]
Description=Crankshaft UI Service
Documentation=https://github.com/opencardev/crankshaft.core
After=crankshaft-core.service graphical.target
Requires=crankshaft-core.service
Wants=graphical.target

[Service]
Type=simple
User=crankshaft
Group=crankshaft
ExecStart=/usr/bin/crankshaft-ui
Restart=on-failure
RestartSec=5
StandardOutput=journal
StandardError=journal

# Environment for Qt platform
Environment="QT_QPA_PLATFORM=eglfs"
Environment="QT_QPA_EGLFS_INTEGRATION=eglfs_kms"

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/lib/crankshaft /var/log/crankshaft
ProtectKernelTunables=true
ProtectKernelModules=true
ProtectControlGroups=true

[Install]
WantedBy=graphical.target
