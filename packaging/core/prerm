set -e
export DEBIAN_FRONTEND=noninteractive

case "$1" in
    remove|deconfigure)
        # Stop and disable systemd service (if systemd is present)
        if command -v systemctl >/dev/null 2>&1 && [ -d /run/systemd/system ]; then
            systemctl stop crankshaft-core.service >/dev/null 2>&1 || true
            systemctl disable crankshaft-core.service >/dev/null 2>&1 || true
        fi

        # Kill any remaining processes (best effort)
        pkill -f '^/usr/bin/crankshaft-core' >/dev/null 2>&1 || true
        pkill -f '[c]rankshaft-core' >/dev/null 2>&1 || true

        echo "Crankshaft Core pre-removal cleanup done"
    ;;
    upgrade)
        # During upgrade, only stop the service gracefully
        if command -v systemctl >/dev/null 2>&1 && [ -d /run/systemd/system ]; then
            systemctl stop crankshaft-core.service >/dev/null 2>&1 || true
        fi
        
        # Wait for process to exit (with timeout)
        for i in 1 2 3 4 5; do
            if ! pgrep -f '[c]rankshaft-core' >/dev/null 2>&1; then
                break
            fi
            sleep 1
        done
        
        # Force kill if still running
        pkill -9 -f '[c]rankshaft-core' >/dev/null 2>&1 || true
        
        echo "Crankshaft Core stopped for upgrade"
    ;;
esac

exit 0
